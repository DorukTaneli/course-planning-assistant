@page
@model CoursePlanner.IndexModel

@{
    ViewData["Title"] = "Classes";
}

    <h1>Classes</h1>

<form>
    <div class="input-group mb-3">
        <select asp-for="ClassSubject" asp-items="Model.Subjects">
            <option value="">All</option>
        </select>
        <input type="text" id="className" class="btn btn-outline-primary" asp-for="SearchString" placeholder="Enter class name" />
        <input type="submit" class="btn btn-outline-primary" value="Filter">
    </div>
</form>


<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />

@section scripts {
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#className").autocomplete({
                source: '@Url.Page("index", "search")'
            });
        });
    </script>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Code)
            </th>
            <th style="width:100px">
                @Html.DisplayNameFor(model => model.Class[0].Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Prerequisite)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Class)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prerequisite)
            </td>

        </tr>
        }
    </tbody>
</table>
